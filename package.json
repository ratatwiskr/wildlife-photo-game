{
  "name": "wildlife-photo-game",
  "version": "0.1.0",
  "description": "A simple wildlife photography game for kids, playable in the browser or on tablet.",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "serve": "npx http-server . -p 8080 -c-1",
    "dev": "npm run build && npm run serve",
    "test": "jest --passWithNoTests",
    "validate:scenes": "ts-node misc/scripts/validateScenes.ts",
    "precommit": "npm run validate:scenes"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/pngjs": "^6.0.5",
    "cypress": "^15.5.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "pngjs": "^7.0.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.6.0",
    "ts-node": "^10.9.2",
    "chalk": "^5.3.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "roots": [
      "<rootDir>/tests"
    ],
    "verbose": true
  },
  "volta": {
    "node": "22.9.0",
    "npm": "10.8.3"
  }
}
