{
  "name": "wildlife-photo-game",
  "version": "0.1.0",
  "description": "A simple wildlife photography game for kids, playable in the browser or on tablet.",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "tsc:clean": "tsc -b --clean",
    "watch": "tsc --watch",
    "serve": "npx http-server . -p 8090 -c-1",
    "dev": "npm run build && npm run serve",
    "test": "jest --passWithNoTests",
    "validate:scenes": "tsx misc/scripts/validateScenes.ts",
    "precommit": "npm run validate:scenes"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/pngjs": "^6.0.5",
    "chalk": "^5.3.0",
    "cypress": "^15.5.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "pngjs": "^7.0.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.6.0"
  },
  "volta": {
    "node": "22.9.0",
    "npm": "10.8.3"
  }
}
