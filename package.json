{
  "name": "wildlife-photo-game",
  "version": "0.1.0",
  "description": "A simple wildlife photography game for kids, playable in the browser or on tablet.",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "serve": "npx http-server . -p 8080 -c-1",
    "dev": "npm run build && npm run serve",
    "test": "jest --passWithNoTests"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.6.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "roots": [
      "<rootDir>/tests"
    ],
    "verbose": true
  }
}
