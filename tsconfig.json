{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "outDir": "./scripts",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}